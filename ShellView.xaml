<Window x:Class="Scratch.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scratch Caliburn App" Height="300" Width="300">
    <StackPanel Margin="10,10,10,10">
        <Button Name="ConfigurePresenter" Content="Configure Presenter" Margin="3" />
        <Button Name="ConfigureObject" Content="Configure POCO" Margin="3" />
        <WrapPanel>
            <Label Content="The value:" />
            <Label Content="{Binding TheValue}" />
        </WrapPanel>
    </StackPanel>
</Window>
